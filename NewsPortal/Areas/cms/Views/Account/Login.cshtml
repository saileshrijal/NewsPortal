@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/admin-theme/jassets/images/favicon.svg" type="image/x-icon" />
    <title>Sign In | PlainAdmin Demo</title>

    <!-- ========== All CSS files linkup ========= -->
    <link rel="stylesheet" href="~/admin-theme/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin-theme/assets/css/lineicons.css" />
    <link rel="stylesheet" href="~/admin-theme/assets/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/admin-theme/assets/css/fullcalendar.css" />
    <link rel="stylesheet" href="~/admin-theme/assets/css/main.css" />
</head>

<body>
    <!-- ======== main-wrapper start =========== -->

    <main class="">
        <div class="row">
            <div class="col-sm-12 col-md-8 mx-auto my-5">
                <!-- ========== signin-section start ========== -->
                <section class="signin-section">
                    <div class="container-fluid">
                        <div class="row g-0 auth-row shadow-lg">
                            <div class="col-lg-6">
                                <div class="auth-cover-wrapper bg-primary-100">
                                    <div class="auth-cover">
                                        <div class="title text-center">
                                            <h1 class="text-primary mb-10">Welcome Back</h1>
                                            <p class="text-medium">
                                                Sign in to your Existing account to continue
                                            </p>
                                        </div>
                                        <div class="cover-image">
                                            <img src="~/admin-theme/assets/images/auth/signin-image.svg" alt="" />
                                        </div>
                                        <div class="shape-image">
                                            <img src="~/admin-theme/assets/images/auth/shape.svg" alt="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end col -->
                            <div class="col-lg-6">
                                <div class="signin-wrapper">
                                    <div class="form-wrapper">
                                        <h4 class="mb-15">CMS - NewsPortal</h6>
                                            <hr>
                                            <form action="#">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="input-style-1">
                                                            <label>Username</label>
                                                            <input type="text" placeholder="Username" required/>
                                                        </div>
                                                    </div>
                                                    <!-- end col -->
                                                    <div class="col-12">
                                                        <div class="input-style-1">
                                                            <label>Password</label>
                                                            <input type="password" placeholder="Password" required/>
                                                        </div>
                                                    </div>
                                                    <!-- end col -->
                                                    <div class="col-xxl-6 col-lg-12 col-md-6">
                                                        <div class="form-check checkbox-style mb-30">
                                                            <input class="form-check-input" type="checkbox" value=""
                                                                id="checkbox-remember" />
                                                            <label class="form-check-label" for="checkbox-remember">
                                                                Remember me</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-12">
                                                        <div class="
                            button-group
                            d-flex
                            justify-content-center
                            flex-wrap
                          ">
                                                            <button class="
                              main-btn
                              primary-btn
                              btn-hover
                              w-100
                              text-center
                            ">
                                                                Sign In
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- end row -->
                                            </form>
                                    </div>
                                </div>
                            </div>
                            <!-- end col -->
                        </div>
                        <!-- end row -->
                    </div>
                </section>
                <!-- ========== signin-section end ========== -->
            </div>
        </div>
    </main>

    <!-- ======== main-wrapper end =========== -->

    <!-- ========= All Javascript files linkup ======== -->
    <script src="~/admin-theme/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin-theme/assets/js/Chart.min.js"></script>
    <script src="~/admin-theme/assets/js/dynamic-pie-chart.js"></script>
    <script src="~/admin-theme/assets/js/moment.min.js"></script>
    <script src="~/admin-theme/assets/js/fullcalendar.js"></script>
    <script src="~/admin-theme/assets/js/jvectormap.min.js"></script>
    <script src="~/admin-theme/assets/js/world-merc.js"></script>
    <script src="~/admin-theme/assets/js/polyfill.js"></script>
    <script src="~/admin-theme/assets/js/main.js"></script>
</body>

</html>
