@model CreateCategoryVm

@{
    ViewData["Title"] = "Create Category";
}

<div class="container-fluid">
    <!-- ========== title-wrapper start ========== -->
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>Add Category</h2>
                </div>
            </div>
            <!-- end col -->
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="lni lni-arrow-left"></i> Categories</a>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- ========== title-wrapper end ========== -->

    <!-- ========== form-elements-wrapper start ========== -->
    <div class="form-elements-wrapper">

        <!-- input style start -->
        <form asp-action="Add">
            <div class="card-style mb-30">
                <div class="input-style-1">
                    <label>Title</label>
                    <input type="text" placeholder="Title" asp-for="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="input-style-1">
                    <label>Slug</label>
                    <input type="text" placeholder="Slug" asp-for="Slug" />
                    <span class="text-danger" asp-validation-for="Slug"></span>
                </div>

                <div class="input-style-1">
                    <label>Description</label>
                    <textarea placeholder="Description" rows="4" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <!-- end input -->
                <button class="main-btn primary-btn square-btn btn-hover">Save</button>
            </div>
        </form>
        <!-- end card -->
        <!-- ======= input style end ======= -->

    </div>
</div>
<!-- end container -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}